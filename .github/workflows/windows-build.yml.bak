name: Windows Build Workflow

on: [push, workflow_dispatch]
jobs:
  build:
    runs-on: windows-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Install Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: '3.7.3'
          channel: 'stable'
          
      - name: Patch for Windows build
        run: |
          flutter doctor
          choco install ninja
          flutter doctor
      - run: flutter build windows

      - name: Install dependencies
        run: flutter pub get

      - name: List Structure
        run: dir build/windows/runner

      - name: Creating build Directory
        run: mkdir beta-build-windows

      - name: Saving Artifact
        run: |
          cp build/windows/runner/Release/* beta-build-windows

      - name: Preparing Artifact for release
        uses: actions/upload-artifact@v2
        with:
          name: beta-build-windows
          path: beta-build-windows
